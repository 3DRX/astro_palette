---
import { Container, FeatureCard } from "@components/odyssey-theme";
import Layout from "../layouts/Page.astro";
import HomeHeroSection from "../components/sections/heros/HomeHeroSection.astro";
---

<Layout>
  <HomeHeroSection />
  <Container>
    <section class="feature-card__section">
      <h2 id="features">Features</h2>
      <p>
        Use one of these components to tune your color.
      </p>
      <div class="feature-card__grid">
        <FeatureCard
          href="/charts/linechart"
          title="Line Chart"
          imgSrc="/assets/images/linechart"
        />
        <FeatureCard
          href="/charts/piechart"
          title="Pie Chart"
          imgSrc="/assets/images/piechart"
        />
        <FeatureCard
          href="/charts/barchart"
          title="Bar Chart"
          imgSrc="/assets/images/barchart"
        />
      </div>
    </section>
  </Container>
</Layout>

<style>
  .feature-card__section {
    margin: var(--section-margin) auto;
  }
  .feature-card__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--theme-grid-gap);
  }
  @media (max-width: 768px) {
    .feature-card__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
